<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>

<VBox xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.controller.MainController"
      styleClass="main-container"
      spacing="0">

    <!-- Верхняя панель -->
    <HBox style="-fx-background-color: linear-gradient(to right, rgba(99, 102, 241, 0.1), rgba(139, 92, 246, 0.1));
                 -fx-padding: 20 30; -fx-spacing: 15;"
          alignment="CENTER_LEFT">

        <HBox spacing="15" alignment="CENTER_LEFT">
            <FontAwesomeIconView glyphName="FILE_PDF_ALT" styleClass="modern-icon" size="28"/>
            <VBox spacing="5">
                <Label text="PDF Signer Pro" styleClass="modern-title"/>
                <Label text="Профессиональная система электронной подписи" styleClass="modern-subtitle"/>
            </VBox>
        </HBox>

        <Region HBox.hgrow="ALWAYS"/>

        <Button text="Новый документ" onAction="#handleNewDocument" styleClass="secondary-button">
            <graphic>
                <FontAwesomeIconView glyphName="FILE" styleClass="modern-icon"/>
            </graphic>
        </Button>
    </HBox>

    <!-- Основной контент -->
    <VBox fx:id="mainContainer" style="-fx-padding: 30; -fx-spacing: 25;"
          alignment="TOP_CENTER">

        <!-- Карточка выбора документа -->
        <VBox styleClass="glass-card" spacing="20" prefWidth="800">
            <padding>
                <Insets top="25" right="30" bottom="25" left="30"/>
            </padding>

            <Label text="Выбор документа" styleClass="modern-title"/>

            <HBox spacing="20" alignment="CENTER_LEFT">
                <VBox spacing="10">
                    <Label text="Тип документа" styleClass="modern-label"/>
                    <ComboBox fx:id="docTypeComboBox" styleClass="modern-combo" prefWidth="350"/>
                </VBox>

                <VBox spacing="10">
                    <Label text="Действия" styleClass="modern-label"/>
                    <Button text="Выбрать файлы" onAction="#handleSelectFiles"
                            styleClass="modern-button">
                        <graphic>
                            <FontAwesomeIconView glyphName="FOLDER_OPEN" styleClass="modern-icon"/>
                        </graphic>
                    </Button>
                </VBox>
            </HBox>
        </VBox>

        <!-- Панель инструментов -->
        <HBox styleClass="modern-toolbar" spacing="12" alignment="CENTER">
            <Button text="Добавить подпись сотрудника" onAction="#handleAddEmployeeSignature"
                    styleClass="secondary-button"/>
            <Button text="Добавить доверенность" onAction="#handleAddProxy"
                    styleClass="secondary-button"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Подписать документ" onAction="#handleSign"
                    styleClass="modern-button success-button"/>
            <Button text="Создать протокол" onAction="#handleCreateProtocol"
                    styleClass="modern-button"/>
        </HBox>

        <!-- Область статуса -->
        <VBox styleClass="glass-card" spacing="15" prefWidth="800">
            <padding>
                <Insets top="20" right="25" bottom="20" left="25"/>
            </padding>

            <HBox spacing="12" alignment="CENTER_LEFT">
                <FontAwesomeIconView glyphName="TASKS" styleClass="modern-icon" size="18"/>
                <Label text="Статус операций" styleClass="modern-subtitle"/>
            </HBox>

            <TextArea fx:id="statusTextArea" styleClass="glass-text-area"
                      prefRowCount="8" wrapText="true"/>
        </VBox>

    </VBox>

    <!-- Статус бар -->
    <HBox styleClass="modern-status-bar" spacing="20" alignment="CENTER_LEFT">
        <HBox spacing="10" alignment="CENTER_LEFT">
            <FontAwesomeIconView glyphName="CIRCLE" size="8" style="-fx-fill: #06D6A0;"/>
            <Label text="Система активна" styleClass="modern-label"/>
        </HBox>

        <Region HBox.hgrow="ALWAYS"/>

        <HBox spacing="15" alignment="CENTER_RIGHT">
            <Label text="PDF Signer Pro v2.0" styleClass="modern-label"/>
            <Label text="|" style="-fx-text-fill: #64748B;"/>
            <Label text="ГОТОВ" style="-fx-text-fill: #06D6A0; -fx-font-weight: 700;"/>
        </HBox>
    </HBox>

</VBox>