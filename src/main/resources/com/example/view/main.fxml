<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.controller.MainController"
      fx:id="mainContainer"
      spacing="15" alignment="TOP_CENTER"
      style="-fx-background-color: linear-gradient(from 25% 25% to 100% 100%, #0077b6, #00b4d8, #90e0ef);">

    <!-- Верхняя панель с заголовком и логотипом -->
    <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 15;">
        <Label text="Визуализация штампов электронной подписи"
               style="-fx-font-size: 18px; -fx-text-fill: white; -fx-font-weight: bold;
                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.5), 5, 0.5, 0, 1);"/>
        <Region HBox.hgrow="ALWAYS"/>
        <ImageView styleClass="bank-logo">
            <image>
                <Image url="@../images/logo.png"/>
            </image>
        </ImageView>
    </HBox>

    <!-- Основной контейнер -->
    <VBox style="-fx-background-color: rgba(255, 255, 255, 0.85);
               -fx-background-radius: 15;
               -fx-border-radius: 15;
               -fx-border-color: rgba(255,255,255,0.7);
               -fx-border-width: 1;
               -fx-padding: 25;
               -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 20, 0, 0, 0);"
          spacing="20" alignment="TOP_CENTER">

        <!-- Выбор типа документа -->
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Тип документа:" style="-fx-font-size: 16px; -fx-text-fill: #2a5885; -fx-font-weight: bold;"/>
            <ComboBox fx:id="docTypeComboBox" style="-fx-pref-width: 300; -fx-font-size: 14px;
                     -fx-background-radius: 5; -fx-border-radius: 5;"/>
        </HBox>

        <!-- Панель кнопок -->
        <GridPane hgap="15" vgap="15" alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="ALWAYS" prefWidth="220"/>
                <ColumnConstraints hgrow="ALWAYS" prefWidth="220"/>
                <ColumnConstraints hgrow="ALWAYS" prefWidth="220"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints vgrow="ALWAYS"/>
                <RowConstraints vgrow="ALWAYS"/>
            </rowConstraints>

            <Button text="Выбрать файлы" onAction="#handleSelectFiles" styleClass="action-button" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <Button text="Добавить подписи" onAction="#handleSign" styleClass="action-button" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
            <Button text="Добавить доверенность" onAction="#handleAddProxy" styleClass="action-button" GridPane.columnIndex="2" GridPane.rowIndex="0"/>

            <Button text="Новый документ" onAction="#handleNewDocument" styleClass="action-button" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <Button text="Добавить подпись сотрудника" onAction="#handleAddEmployeeSignature" styleClass="action-button" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            <Button text="Сформировать протокол" onAction="#handleCreateProtocol" styleClass="action-button" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
        </GridPane>

        <!-- Статусная панель -->
        <VBox spacing="5" style="-fx-padding: 10;">
            <Label text="Статус операции:" style="-fx-font-size: 16px; -fx-text-fill: #2a5885; -fx-font-weight: bold;"/>
            <TextArea fx:id="statusTextArea" editable="false"
                      style="-fx-pref-height: 200; -fx-font-size: 14px;
                           -fx-background-color: rgba(255,255,255,0.7);
                           -fx-border-radius: 10; -fx-background-radius: 10;
                           -fx-border-color: #a0c0e0;"/>
        </VBox>
    </VBox>
</VBox>